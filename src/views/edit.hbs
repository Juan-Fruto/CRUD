<div class="container" style="width: 50% ; padding: 80px 150px; margin: 5px 25%;">
    <h1>Edit Page</h1>
    <form action="/students/{{object._id}}/edit" method="POST">
        <input type="text" class="form-control" name="name" placeholder="name" value="{{object.name}}" id="name"><br/>
        <input type="number" class="form-control" name="grade" placeholder="grade" value="{{object.grade}}" id="grade">
        <div class="form-check form-switch">
            {{#if object.status}}
                <input type="checkbox" name="status" class="form-check-input" checked id="status">
            {{else}}
                <input type="checkbox" name="status" class="form-check-input" id="status">
            {{/if}}
        </div>
        <button class="btn btn-primary">send</button>
    </form>
</div>
